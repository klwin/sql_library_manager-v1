extends ../layout

block content

    include errors
  
    form(action="/books/" + book.id + "/edit", method="post")
        p
            label(for="title") Title:
            input(type="text", name="title" value=book.title)
        p
            label(for="author") Author:
            input(type="text", name="author" value=book.author)
        p
            label(for="genre") Author:
            input(type="text", name="genre" value=book.genre)
        p
            label(for="year") Year:
            input(type="text", name="year" value=book.year)
        p
            input(type="submit" value="Update Book")
    form(action="/books/" + book.id + "/delete", method="post" onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a(href="/", class="button") Cancel
        p 
            input(type="submit" value="Delete Book")